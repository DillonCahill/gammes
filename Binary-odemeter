<body>

    <div class="container">
        <div class="label" id="mode-label">Mode: Binary (8-bit)</div>
        <div class="odometer-display" id="display">
            </div>

        <div class="controls">
            <button onclick="increment()">Count Up</button>
            <button class="secondary" onclick="reset()">Reset</button>
            <button class="secondary" onclick="toggleMode()">Switch Mode</button>
        </div>
        
        <p style="margin-top: 20px; color: #64748b;">Decimal Value: <span id="decimal-val">0</span></p>
    </div>

    <script>
        let count = 0;
        let isHex = false;
        const display = document.getElementById('display');
        const modeLabel = document.getElementById('mode-label');
        const decimalLabel = document.getElementById('decimal-val');

        function updateDisplay() {
            display.innerHTML = '';
            let valueStr = '';

            if (isHex) {
                // Hexadecimal logic (padded to 2 digits for 0-255)
                valueStr = count.toString(16).toUpperCase().padStart(2, '0');
                modeLabel.innerText = "Mode: Hexadecimal";
            } else {
                // Binary logic (padded to 8 bits)
                valueStr = count.toString(2).padStart(8, '0');
                modeLabel.innerText = "Mode: Binary (8-bit)";
            }

            // Create digit boxes
            [...valueStr].forEach(char => {
                const div = document.createElement('div');
                div.className = 'digit';
                div.innerText = char;
                display.appendChild(div);
            });

            decimalLabel.innerText = count;
        }

        function increment() {
            count = (count + 1) % 256; // Loop back at 8-bit limit
            updateDisplay();
        }

        function toggleMode() {
            isHex = !isHex;
            updateDisplay();
        }

        function reset() {
            count = 0;
            updateDisplay();
        }

        // Initialize
        updateDisplay();
    </script>
</body>
</html>
