            transition: all 0.2s ease-in-out;
            box-shadow: inset 0 0 10px rgba(56, 189, 248, 0.2);
        }

        .controls {
            display: flex;
            gap: 15px;
            justify-content: center;
            margin-top: 1rem;
        }

        button {
            padding: 10px 20px;
            font-size: 1rem;
            cursor: pointer;
            border: none;
            border-radius: 5px;
            background: var(--accent-color);
            color: var(--bg-color);
            font-weight: bold;
            transition: opacity 0.2s;
        }

        button:hover {
            opacity: 0.8;
